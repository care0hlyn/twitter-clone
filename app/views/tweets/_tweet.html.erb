<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to tweet.user.name, user_path(@user) %>
    </h3>
  </div>
  <div class="panel-body">
    <%= link_to tweet.content, user_tweet_path(@user, tweet) %>
  </div>
  <div class="panel-footer">
    <%= tweet.created_at %>
  </div>
</div>
