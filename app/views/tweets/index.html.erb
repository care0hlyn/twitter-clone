<% content_for(:title, "#{@user.name}'s Tweet | Twitter") %>

  <div class="row clearfix">

    <div class="col-md-3 column">
      <div class="page-header">
        <h3>
          <p>Hello, </p><small>@<%= @user.name %></small>
        </h3>
      </div><img alt="140x140" src="http://lorempixel.com/140/140/" class="img-thumbnail">

      <h4>
        About Me:
      </h4>
      <p>
        I am a work in progress/shitty Twitter clone page.
      </p>

      <p>
        <a class="btn" href="#">View details Â»</a>
      </p>
    </div>

    <div class="col-md-6 column">
      <br>
      <% @tweets.each do |tweet| %>
        <div class="panel panel-default" id="tweets">
          <div class="panel-heading">
            <h3 class="panel-title">
              @<%= link_to tweet.user.name, user_path(@user) %>
            </h3>
          </div>
          <div class="panel-body">
            <%= link_to tweet.content, user_tweet_path(@user, tweet) %>
          </div>
          <div class="panel-footer">
            <%= tweet.created_at %>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div class="col-md-3 column">
      <div class="list-group">
         <a href="#" class="list-group-item active">Who to follow:</a>
        <div class="list-group-item">
            <% @users.each do |user| %>
            <p><%= link_to user.name, user_path(user) %> <%= link_to image_tag( "http://www.insidewallstreetreport.com/wp-content/themes/BulletPress_1.1/BulletPressWP/framework/images/twitter-follow.png" ), user_follows_path(user), method: "post" %></p>
            <% end %>
        </div>

      </div>
    </div>

  </div>
</div>
