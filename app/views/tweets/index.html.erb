<% content_for(:title, "#{@user.name}'s Tweet | Twitter") %>

  <div class="row clearfix">

    <div class="col-md-3 column">
      <div class="page-header">
        <h3>
          <p>Hello, </p><small>@<%= @user.name %></small>
        </h3>
      </div><img alt="140x140" src="http://lorempixel.com/140/140/" class="img-thumbnail">

      <h4>
        About Me:
      </h4>
      <p>
        I am a work in progress/shitty Twitter clone page.
      </p>

      <p>
        <a class="btn" href="#">View details Â»</a>
      </p>
    </div>

    <div class="col-md-6 column">
      <br>
        <div id="new-tweet">
          <%= render ('form') %>
        </div>
      </br>

      <% @tweets.each do |tweet| %>
        <div class="panel panel-default" id="tweets">
          <div class="panel-heading">
            <h3 class="panel-title">
              @<%= tweet.user.name %>
            </h3>
          </div>
          <div class="panel-body">
            <%= link_to tweet.content, user_tweet_path(@user, tweet) %>
          </div>
          <div class="panel-footer">
            <%= tweet.created_at %>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div class="col-md-3 column">
      <div class="list-group">
         <a href="#" class="list-group-item active">Who to follow:</a>
        <div class="list-group-item">
          Friends
        </div>

      </div>
    </div>

  </div>
</div>
